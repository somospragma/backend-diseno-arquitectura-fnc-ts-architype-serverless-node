{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true, // Permite trabajar con archivos JSON en TypeScript
    "baseUrl": "./",
    "paths": {
      "@userManagement/*": ["src/mercantil/arquetipo/userManagement/*"],
      "@parameterManagement/*": ["src/mercantil/arquetipo/parameterManagement/*"],
      "@crosscutting/*": ["src/mercantil/arquetipo/crosscutting/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
