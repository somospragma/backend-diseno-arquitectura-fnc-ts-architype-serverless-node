{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@userManagement/*": ["userManagement/*"],
      "@parameterManagement/*": ["parameterManagement/*"],
      "@crosscutting/*": ["crosscutting/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist", "tests"]
}
